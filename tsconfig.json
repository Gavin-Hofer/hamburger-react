{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "declaration": true,
    "rootDir": "./src",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "tests",
    "docs"
  ],
  "include": [
    "src/*.ts",
    "src/*.tsx"
  ]
}
